{
  "id": "auto-git-commit",
  "name": "Auto Git Commit on File Change",
  "enabled": false,
  "description": "Automatically commit changes when files are modified",
  "trigger": {
    "type": "file_change",
    "path": "~/clawd",
    "events": ["modify", "add"],
    "ignored": "node_modules/**"
  },
  "conditions": [],
  "actions": [
    {
      "type": "git",
      "add": true,
      "commit": "Auto-update: ${timestamp}",
      "push": true
    },
    {
      "type": "notify",
      "channel": "telegram",
      "message": "ðŸ”„ Git auto-commit executed"
    }
  ]
}
